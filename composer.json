{
  "name": "edbizarro/bi-connect",
  "license": "MIT",
  "description": "Connect with 3rd party sources to get data",
  "type": "library",
  "authors": [
    {
      "name": "Eduardo Bizarro",
      "email": "edbizarro@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1.3",
    "Adobe-Marketing-Cloud/marketing-cloud-php-sdk": "^2.1",
    "facebook/php-ads-sdk": "^2",
    "facebook/graph-sdk": "~5.0",
    "google/apiclient": "^2.0",
    "guzzlehttp/guzzle": "~6.0",
    "illuminate/config": "^5.6",
    "nesbot/carbon": "^1.23",
    "phpoffice/phpexcel": "1.8.*",
    "phpoffice/phpspreadsheet": "^1.1",
    "tightenco/collect": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "~6",
    "squizlabs/php_codesniffer": "~3.2",
    "phpmd/phpmd": "@stable",
    "friendsofphp/php-cs-fixer": "^2",
    "roave/security-advisories": "dev-master@dev",
    "sensiolabs/security-checker": "4.1.*"
  },
  "autoload": {
    "classmap": [
      "src/Bi/"
    ],
    "psr-4": {
      "Bi\\Connect\\": "src/Bi/Connect/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bi\\Connect\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "/usr/bin/phpdbg7.0 -qrr ./vendor/phpunit/phpunit/phpunit -v --color",
    "sniff": "./vendor/bin/phpcs ./src --standard=PSR2 --report=summary",
    "phpmd": "./vendor/bin/phpmd ./src html rulesets/cleancode.xml --reportfile ./build/phpmd.html"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages" : true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
